<?xml version="1.0" encoding="UTF-8"?>

<!-- Operation Definitions -->
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="senaite.core">

    <record name="bika.coa.email_csv_report_enabled">
      <field type="plone.registry.field.Bool">
        <default>False</default>
        <title>Email CSV Report Enabled</title>
      </field>
    </record>

  <!-- COA Logo CSS Styles -->
  <record name="senaite.coa_logo_styles" interface="Products.CMFPlone.interfaces.controlpanel.ISiteSchema" field="coa_logo_styles">
    <field type="plone.registry.field.Dict">
      <title>Logo CSS</title>
      <description>CSS styles for the coa logo</description>
      <key_type type="plone.registry.field.ASCIILine" />
      <value_type type="plone.registry.field.ASCIILine" />
    </field>
    <value>
      <element key="height">68px</element>
    </value>
  </record>

  <!-- COA Accreditation Logo CSS Styles -->
  <record name="senaite.coa_logo_accredition_styles" interface="Products.CMFPlone.interfaces.controlpanel.ISiteSchema" field="coa_logo_accredition_styles">
    <field type="plone.registry.field.Dict">
      <title>Logo CSS</title>
      <description>CSS styles for the coa accreditation logo</description>
      <key_type type="plone.registry.field.ASCIILine" />
      <value_type type="plone.registry.field.ASCIILine" />
    </field>
    <value>
      <element key="height">48px</element>
    </value>
  </record>

</registry>
